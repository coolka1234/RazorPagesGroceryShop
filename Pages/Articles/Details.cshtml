@page
@model RazorGSH.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(ViewBag.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.IsPromo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.IsPromo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.ImagePath)
        </dt>
    </dl>

    @if (Model.Article.ImagePath != null)
    {
        <img src="~/@Model.Article.ImagePath" />
    }
    else
    {
        <img src="~/image/noimage.jpg" />
    }

</div>

   

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}