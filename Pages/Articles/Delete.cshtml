@page
@model RazorGSH.Pages.Articles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(ViewBag.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.IsPromo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.IsPromo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.ImagePath)
        </dt>
    </dl>

    @if (Model.Article.ImagePath != null)
    {
        <img src="~/@Model.Article.ImagePath" />
    }
    else
    {
        <img src="~/image/noimage.jpg" />
    }
    <form method="post">
        <input type="hidden" asp-for="Article.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
